@using Microsoft.AspNetCore.Identity
@using biletcoo.Models
@model users;
@inject SignInManager<users> SignInManager
@inject UserManager<users> userManager
@{
    var user = await userManager.GetUserAsync(User);
    var name = user.FirstName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - biletcoo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/MainPage.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a asp-controller="Account" asp-action="Main"><h1>Biletco</h1></a>
        <div class="search-container">
            <input type="text" id="search" placeholder="Search by event name" onkeyup="searchEvent()">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <div class="right-header">
            <ul>
                <li><p style="color: white; text-align: center;"><strong>Welcome @name </strong></p></li>
                <li><button type="button" onclick="window.location.href='myTickets.html'">My Tickets</button></li>
                <li><button type="button" onclick="window.location.href='favourites.html'">Favourite Events</button></li>
                <li><a asp-controller="Account" asp-action="Logout" id="logout">Logout</a></li>

            </ul>
        </div>
    </header>
    <div class="category">
        <ul>
            <div class="wrap">
                <i class="fa-solid fa-eye"></i>
            <li>
                <select id="category" name="category">
                    <option value="">Select a category</option>
                    <option value="Music">Music</option>
                    <option value="Art">Art</option>
                    <option value="Sports">Sports</option>
                    <option value="Workshop">Workshop</option>
